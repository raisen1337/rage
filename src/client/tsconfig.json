{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"types": ["../../node_modules/@ragempcommunity/types-client", "./@types"],
		"baseUrl": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
	
		"paths": {
			"@shared/*": ["../shared/*"],
			"@/*": ["./*"]
		}
	},
	"include": ["./**/*.ts", "../shared/**/*.ts"],
	"exclude": ["../shared/**/*.d.ts"]
}
